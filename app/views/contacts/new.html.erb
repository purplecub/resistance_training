<div class="row">
    <div class="col-md-10">
        <h2 class="text-center">Contact Us</h2>
        <%= form_for @contact do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :email %>
            <%= f.email_field :email %>
            
            <%= f.label :message %>
            <%= f.text_area :message %>
        <% end %>
    </div>
</div>